<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, video">

		<image name="logo">
			<path>./../_inc/images/Nintendo.png</path>
		</image>

		<textlist name="gamelist">
			<selectorColor>ba0001</selectorColor>
		</textlist>

		<text name="system_name_1" extra="true">
			<text>Super Nintendo</text>
			<forceUppercase>1</forceUppercase>
			<size>0.743 0.085</size>
			<pos>0.192 0.019</pos>
			<color>c9c9c9</color>
			<fontPath>./../_inc/fonts/Montserrat-Medium.ttf</fontPath>
			<fontSize>0.077</fontSize>
			<alignment>left</alignment>
		</text>

	</view>

	<view name="detailed">
	</view>

</theme>
